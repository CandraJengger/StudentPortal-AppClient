<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".ui.rekap_presensi.RekapPresensiFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp"
        android:layout_marginBottom="15dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/spinner_semester"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_tabs"
        android:orientation="horizontal">
        
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_hadir"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:padding="16dp"
            android:background="@color/colorGreen"/>

        <TextView
            android:id="@+id/txt_hadir"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_hadir_value"
            android:textSize="17sp"
            android:textAlignment="center"
            android:padding="16dp"
            android:textColor="@color/colorPrimary" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_tabs"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_izin"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:padding="16dp"
            android:background="@color/colorYellow"/>

        <TextView
            android:id="@+id/txt_izin"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_izin_value"
            android:textSize="17sp"
            android:textAlignment="center"
            android:padding="16dp"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_tabs"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_alpha"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:padding="16dp"
            android:background="@color/colorRed"/>

        <TextView
            android:id="@+id/txt_alpha"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_alpha_value"
            android:textSize="17sp"
            android:textAlignment="center"
            android:padding="16dp"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_tabs"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_kosong"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:padding="16dp"
            android:background="@color/colorGray"/>

        <TextView
            android:id="@+id/txt_kosong"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rp_alpha_value"
            android:textSize="17sp"
            android:textAlignment="center"
            android:padding="16dp"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btn_detail_presensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:background="@color/colorYellow"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/colorPrimary"
                    android:layout_marginEnd="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_detail"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>