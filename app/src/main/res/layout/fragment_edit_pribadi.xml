<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite80"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.edit.EditPribadiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="@color/colorWhite80">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_nik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_NIK"
                android:text="@string/strip"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorWhite80"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_nama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_nama_lengkap"
                android:text="@string/strip"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorWhite80"
                android:padding="8dp"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_tempat_lahir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_tempat_lahir"
                android:text="@string/strip"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorWhite80"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_tanggal_lahir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_tanggal_lahir"
                android:text="@string/strip"
                android:background="@color/colorWhite80"
                android:textColor="@color/colorPrimary"
                android:inputType="numberDecimal"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="9dp"
                android:text="@string/jenis_kelamin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/rb_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="@string/laki_laki"
                        android:textColor="@color/colorPrimary"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/perempuan" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="9dp"
                android:text="@string/dp_agama"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/spinner_agama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:padding="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_provinsi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/provinsi"
                android:text="@string/strip"
                android:background="@color/colorWhite80"
                android:textColor="@color/colorPrimary"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_kota"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/kota_kabupaten"
                android:text="@string/strip"
                android:background="@color/colorWhite80"
                android:textColor="@color/colorPrimary"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_alamat_asal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_alamat_asal"
                android:text="@string/strip"
                android:background="@color/colorWhite80"
                android:textColor="@color/colorPrimary"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_alamat_sekarang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_alamat_sekarang"
                android:text="@string/strip"
                android:background="@color/colorWhite80"
                android:textColor="@color/colorPrimary"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_no_hp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_no_hp"
                android:text="@string/strip"
                android:background="@color/colorWhite80"
                android:textColor="@color/colorPrimary"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite80"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dp_email"
                android:text="@string/strip"
                android:background="@color/colorWhite80"
                android:textColor="@color/colorPrimary"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/btn_wrap_upload_bukti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="@string/status_upload_ktp"/>
                <Button
                    android:id="@+id/btn_laporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pilih_file"
                    android:textAllCaps="false"
                    android:padding="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorWhite80" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:layout_above="@id/btn_batal"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_save"
                        app:tint="@color/colorPrimary"
                        android:layout_marginEnd="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pg_simpan"
                        android:textSize="17sp"
                        style="@style/MyTextColor"
                        android:layout_marginEnd="20dp"/>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_batal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pg_batal"
                android:textAllCaps="false"
                android:padding="20dp"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGray"
                android:textColor="@color/colorPrimary" />

    </LinearLayout>
</ScrollView>

