<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".ui.menu_pilihan.menu_profile.MenuProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_data_profil"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_profil"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:maxLines="1"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_user"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_rekap_presensi"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/rp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:maxLines="2"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_dvr_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                app:tint="@android:color/black" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_hasil_studi"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hs"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:maxLines="2"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_assignment_turned"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                app:tint="@android:color/black" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>