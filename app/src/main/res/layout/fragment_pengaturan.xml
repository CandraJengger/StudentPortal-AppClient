<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite100"
    tools:context=".ui.pengaturan.PengaturanFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/undraw"
            android:contentDescription="@string/icon_setting"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="27dp"
                    android:text="@string/pg_npm"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collon"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:id="@+id/pengaturan_npm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pg_npm_value"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="27dp"
                    android:text="@string/pg_nama_lengkap"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collon"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:id="@+id/pengaturan_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pg_nama_lengkap_value"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pg_password_baru"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collon"
                    android:textSize="17sp"
                    style="@style/MyTextColor"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="17sp"
                        style="@style/MyTextColor"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    style="@style/MyTextColor"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="7dp"
                    android:text="@string/pg_ulangi_password"
                    android:maxLines="2"
                    android:textSize="17sp" />

                <TextView
                    style="@style/MyTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/collon"
                    android:textSize="17sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_ulangi_password"
                        style="@style/MyTextColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite100">

            <LinearLayout
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="19dp"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_save"
                        app:tint="@color/colorPrimary"
                        android:layout_marginEnd="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pg_simpan"
                        android:textSize="17sp"
                        style="@style/MyTextColor"
                        android:layout_marginEnd="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_below="@id/btn_simpan"
                android:id="@+id/btn_batal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pg_batal"
                android:textAllCaps="false"
                android:padding="20dp"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGray"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>