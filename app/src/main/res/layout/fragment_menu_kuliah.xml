<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.menu_pilihan.menu_kuliah.MenuKuliahFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_lms"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:cardBackgroundColor="@color/colorYellow"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lms"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:maxLines="1"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_book"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="30dp"
                    app:tint="@android:color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_jadwal_kuliah"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:cardBackgroundColor="@color/colorYellow"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jk"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:maxLines="1"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_event"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="30dp"
                    app:tint="@android:color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_presensi"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:cardBackgroundColor="@color/colorYellow"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/presensi"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:maxLines="2"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_ind"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="30dp"
                    app:tint="@android:color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_kalender"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:cardBackgroundColor="@color/colorYellow"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/kalender_akademik"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:maxLines="2"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_calendar_today"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="30dp"
                    app:tint="@android:color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>